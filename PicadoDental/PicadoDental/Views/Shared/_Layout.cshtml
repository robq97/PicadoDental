<!DOCTYPE html>
<html>
<head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="~/Public/CSS/materialize.css" media="screen,projection" />

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
        body {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
            background-image: url("../../Public/IMG/mainBackground.jpg")
        }

        main {
            flex: 1 0 auto;
        }
    </style>
</head>

<body>

    <header>
        @Html.Partial("_NavBar")
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        @Html.Partial("_Footer")
    </footer>
    <!--JavaScript at end of body for optimized loading-->
    <script type="text/javascript" src="~/Public/Scripts/materialize.js"></script>
    <script>M.AutoInit();</script>
    <script>
        function alerta() {
            M.toast({ html: "@TempData["message"]" })
        }
    </script>
</body>
</html>